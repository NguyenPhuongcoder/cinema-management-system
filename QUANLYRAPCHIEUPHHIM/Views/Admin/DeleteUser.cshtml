@model QUANLYRAPCHIEUPHHIM.Models.User

<h2>Delete User</h2>

<h3>Are you sure you want to delete this user?</h3>
<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Username</dt>
        <dd class="col-sm-10">@Model.Username</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
    </dl>
    <form asp-action="DeleteUserConfirmed" asp-route-id="@Model.UserId" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Users" class="btn btn-secondary">Back to List</a>
    </form>
</div> 