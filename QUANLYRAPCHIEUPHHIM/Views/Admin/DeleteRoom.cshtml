@model QUANLYRAPCHIEUPHHIM.Models.Room

<h2>Delete Room</h2>

<h3>Are you sure you want to delete this room?</h3>
<div>
    <h4>Room Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Room Name</dt>
        <dd class="col-sm-10">@Model.RoomName</dd>
        
        <dt class="col-sm-2">Capacity</dt>
        <dd class="col-sm-10">@Model.Capacity</dd>
    </dl>
    
    <form asp-action="DeleteRoomConfirmed" asp-route-id="@Model.RoomId" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Rooms" class="btn btn-secondary">Back to List</a>
    </form>
</div> 