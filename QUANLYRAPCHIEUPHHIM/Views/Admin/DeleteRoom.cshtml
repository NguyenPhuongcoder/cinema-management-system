@model QUANLYRAPCHIEUPHHIM.Models.Room
@{
    ViewData["Title"] = "Delete Room";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Delete Room</h1>

    <div class="card shadow mb-4">
        <div class="card-body">
            <h3>Are you sure you want to delete this room?</h3>
            <div class="alert alert-danger">
                <strong>Warning:</strong> This action cannot be undone.
            </div>

            <dl class="row">
                <dt class="col-sm-3">Room Name</dt>
                <dd class="col-sm-9">@Model.RoomName</dd>

                <dt class="col-sm-3">Capacity</dt>
                <dd class="col-sm-9">@Model.Capacity seats</dd>

                <dt class="col-sm-3">Room Format</dt>
                <dd class="col-sm-9">@Model.Format?.FormatName</dd>
           
            </dl>

            <form asp-action="DeleteRoom" method="post">
                <input type="hidden" asp-for="RoomId" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Rooms" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>
</div> 