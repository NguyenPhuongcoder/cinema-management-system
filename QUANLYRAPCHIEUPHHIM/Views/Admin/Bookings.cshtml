@model IEnumerable<QUANLYRAPCHIEUPHHIM.Models.Booking>
@{
    ViewData["Title"] = "Bookings Management";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Bookings Management</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">All Bookings</h6>
          
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>User</th>
                            <th>Booking Date</th>
                            <th>Total Amount</th>
                            <th>Discount</th>
                            <th>Payment Due Date</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var booking in Model)
                        {
                            <tr>
                                <td>@booking.BookingId</td>
                                <td>
                                    @if (ViewBag.Usernames.ContainsKey(booking.UserId))
                                    {
                                        @ViewBag.Usernames[booking.UserId]
                                    }
                                    else
                                    {
                                        <span>Không xác định</span>
                                    }
                                </td>
                                <td>@booking.BookingDate.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@booking.TotalAmount.ToString("N0") VND</td>
                                <td>@(booking.Discount?.DiscountName ?? "None")</td>
                                <td>@(booking.PaymentDueDate?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</td>
                                <td>
                                    @{
                                        var statuses = ViewBag.BookingStatuses as List<BookingBookingStatus>;
                                        var status = statuses?.FirstOrDefault(s => s.BookingId == booking.BookingId)?.BookingStatus?.BookingStatusName ?? "N/A";
                                    }
                                    @status
                                </td>
                                <td>
                                 
                                    <a href="@Url.Action("EditBooking", "Admin", new { id = booking.BookingId })" class="btn btn-primary btn-sm">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a href="@Url.Action("DeleteBooking", "Admin", new { id = booking.BookingId })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this booking?')">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#dataTable').DataTable();
        });
    </script>
} 