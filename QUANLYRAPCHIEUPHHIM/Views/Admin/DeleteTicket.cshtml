@model QUANLYRAPCHIEUPHHIM.Models.Ticket
@{
    ViewData["Title"] = "Delete Ticket";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Delete Ticket</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-danger">Are you sure you want to delete this ticket?</h6>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Ticket Code</dt>
                <dd class="col-sm-9">@Model.TicketCode</dd>

                <dt class="col-sm-3">Movie</dt>
                <dd class="col-sm-9">@Model.Showtime?.Movie?.Title</dd>

                <dt class="col-sm-3">Showtime</dt>
                <dd class="col-sm-9">@Model.Showtime?.StartTime.ToString("dd/MM/yyyy HH:mm")</dd>

                <dt class="col-sm-3">Room</dt>
                <dd class="col-sm-9">@Model.Showtime?.Room?.RoomName</dd>

                <dt class="col-sm-3">Seat</dt>
                <dd class="col-sm-9">@Model.Seat?.SeatNumber</dd>

                <dt class="col-sm-3">Price</dt>
                <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">@Model.TicketStatus</dd>

                <dt class="col-sm-3">Scan Date/Time</dt>
                <dd class="col-sm-9">@(Model.ScanDatetime?.ToString("dd/MM/yyyy HH:mm") ?? "Not scanned")</dd>

                <dt class="col-sm-3">Created At</dt>
                <dd class="col-sm-9">@Model.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</dd>
            </dl>

            <form asp-action="DeleteTicket" method="post">
                <input type="hidden" asp-for="TicketId" />
                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="Tickets" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div> 