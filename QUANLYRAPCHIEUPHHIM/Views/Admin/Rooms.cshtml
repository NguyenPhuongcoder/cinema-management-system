@model IPagedList<QUANLYRAPCHIEUPHHIM.Models.Room>
@using X.PagedList
@using X.PagedList.Mvc.Core
@{
    ViewData["Title"] = "Rooms Management";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Rooms Management</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">All Rooms</h6>
            <a asp-action="CreateRoom" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add New Room
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Room Name</th>
                            <th>Capacity</th>
                            <th>Room Format</th>
                            <th>Cinema</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var room in Model)
                        {
                            <tr>
                                <td>@room.RoomId</td>
                                <td>@room.RoomName</td>
                                <td>@room.Capacity seats</td>
                                <td>@room.Format?.FormatName</td>
                                <td>@room.Cinema?.CinemaName</td>
                                <td>
                                 
                                    <a href="@Url.Action("EditRoom", "Admin", new { id = room.RoomId })" class="btn btn-primary btn-sm" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a href="@Url.Action("DeleteRoom", "Admin", new { id = room.RoomId })" class="btn btn-danger btn-sm" title="Delete" onclick="return confirm('Are you sure you want to delete this room?')">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="d-flex justify-content-center mt-4">
                @Html.PagedListPager(Model, page => Url.Action("Rooms", new { page }), 
                    new PagedListRenderOptions {
                        LiElementClasses = new string[] { "page-item" },
                        PageClasses = new string[] { "page-link" }
                    })
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#dataTable').DataTable({
                "paging": false,
                "ordering": true,
                "info": false
            });
        });
    </script>
} 