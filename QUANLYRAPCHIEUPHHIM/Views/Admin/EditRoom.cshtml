@model QUANLYRAPCHIEUPHHIM.Models.Room

<h2>Edit Room</h2>

<form asp-action="EditRoom">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="RoomId" />
    
    <div class="form-group">
        <label asp-for="RoomName">Room Name</label>
        <input asp-for="RoomName" class="form-control" />
        <span asp-validation-for="RoomName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Capacity">Capacity</label>
        <input asp-for="Capacity" class="form-control" type="number" min="1" />
        <span asp-validation-for="Capacity" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Rooms" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 