@model IEnumerable<QUANLYRAPCHIEUPHHIM.Models.User>
@{
    ViewData["Title"] = "Users Management";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Users Management</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">All Users</h6>
            <a href="@Url.Action("CreateUser", "Admin")" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add New User
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Full Name</th>
                            <th>Phone</th>
                            <th>Role</th>
                            <th>Created At</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.UserId</td>
                                <td>@user.Username</td>
                                <td>@user.Email</td>
                                <td>@user.FullName</td>
                                <td>@user.Phone</td>
                                <td>
                                    @{
                                        var role = user.UserRoles.FirstOrDefault()?.Role?.RoleName ?? "User";
                                        var roleClass = role.ToLower() switch
                                        {
                                            "admin" => "danger",
                                            "staff" => "warning",
                                            _ => "primary"
                                        };
                                    }
                                    <span class="badge bg-@roleClass">@role</span>
                                </td>
                                <td>@(user.CreatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</td>
                                <td>
                                    <a href="@Url.Action("EditUser", "Admin", new { id = user.UserId })" class="btn btn-primary btn-sm">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                               
                                    <a href="@Url.Action("DeleteUser", "Admin", new { id = user.UserId })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this user?')">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#dataTable').DataTable();
        });
    </script>
} 