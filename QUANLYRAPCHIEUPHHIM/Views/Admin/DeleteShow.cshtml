@model QUANLYRAPCHIEUPHHIM.Models.Showtime

<h2>Delete Show</h2>

<h3>Are you sure you want to delete this show?</h3>
<div>
    <h4>Show</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Movie</dt>
        <dd class="col-sm-10">@ViewBag.MovieTitle</dd>
        <dt class="col-sm-2">Room</dt>
        <dd class="col-sm-10">@ViewBag.RoomName</dd>
        <dt class="col-sm-2">Start Time</dt>
        <dd class="col-sm-10">@Model.StartTime.ToString("g")</dd>
    </dl>
    <form asp-action="DeleteShowConfirmed" asp-route-id="@Model.ShowtimeId" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Shows" class="btn btn-secondary">Back to List</a>
    </form>
</div> 