@model QUANLYRAPCHIEUPHHIM.Models.Movie
@{
    ViewData["Title"] = "Edit Movie";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Edit Movie</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Movie Information</h6>
        </div>
        <div class="card-body">
            <form asp-action="EditMovie" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="MovieId" />
                <input type="hidden" asp-for="PosterUrl" />

                <div class="form-group">
                    <label asp-for="Title" class="control-label">Title</label>
                    <input asp-for="Title" class="form-control" required />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Duration" class="control-label">Duration (minutes)</label>
                            <input asp-for="Duration" class="form-control" type="number" required />
                            <span asp-validation-for="Duration" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ReleaseDate" class="control-label">Release Date</label>
                            <input asp-for="ReleaseDate" class="form-control" type="date" required />
                            <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="AgeLimit" class="control-label">Age Limit</label>
                            <select asp-for="AgeLimit" class="form-control" required>
                                <option value="">Select Age Limit</option>
                                <option value="G">G - General Audiences</option>
                                <option value="PG">PG - Parental Guidance</option>
                                <option value="PG-13">PG-13 - Parents Strongly Cautioned</option>
                                <option value="R">R - Restricted</option>
                                <option value="NC-17">NC-17 - Adults Only</option>
                            </select>
                            <span asp-validation-for="AgeLimit" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="BasePrice" class="control-label">Base Price</label>
                            <input asp-for="BasePrice" class="form-control" type="number" step="0.01" required />
                            <span asp-validation-for="BasePrice" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Language" class="control-label">Language</label>
                            <input asp-for="Language" class="form-control" />
                            <span asp-validation-for="Language" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Subtitles" class="control-label">Subtitles</label>
                            <input asp-for="Subtitles" class="form-control" />
                            <span asp-validation-for="Subtitles" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="TrailerUrl" class="control-label">Trailer URL</label>
                    <input asp-for="TrailerUrl" class="form-control" type="url" />
                    <span asp-validation-for="TrailerUrl" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label">Current Poster</label>
                    @if (!string.IsNullOrEmpty(Model.PosterUrl))
                    {
                        <div class="mb-2">
                            <img src="@Model.PosterUrl" alt="@Model.Title" class="img-thumbnail" style="max-width: 200px;" />
                        </div>
                    }
                    <label class="control-label">New Poster Image (Optional)</label>
                    <input type="file" name="posterFile" class="form-control" accept="image/*" />
                    <small class="form-text text-muted">Recommended size: 500x750 pixels. Max file size: 5MB.</small>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <a asp-action="Movies" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 