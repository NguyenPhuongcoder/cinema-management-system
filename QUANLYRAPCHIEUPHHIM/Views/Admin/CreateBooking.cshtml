@model QUANLYRAPCHIEUPHHIM.Models.Booking

<h2>Create Booking</h2>

<form asp-action="CreateBooking">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="UserId"></label>
        <select asp-for="UserId" asp-items="@(new SelectList(ViewBag.Users, "UserId", "Username"))" class="form-control"></select>
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Bookings" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 