@model QUANLYRAPCHIEUPHHIM.Models.Movie
@{
    ViewData["Title"] = "Delete Movie";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Delete Movie</h1>

    <div class="card shadow mb-4">
        <div class="card-body">
            <h3>Are you sure you want to delete this movie?</h3>
            <div class="alert alert-danger">
                <strong>Warning:</strong> This action cannot be undone.
            </div>

            <div class="row">
                <div class="col-md-4">
                    @if (!string.IsNullOrEmpty(Model.PosterUrl))
                    {
                        <img src="@Model.PosterUrl" alt="@Model.Title" class="img-fluid mb-3" />
                    }
                </div>
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-3">Title</dt>
                        <dd class="col-sm-9">@Model.Title</dd>

                        <dt class="col-sm-3">Duration</dt>
                        <dd class="col-sm-9">@Model.Duration minutes</dd>

                        <dt class="col-sm-3">Release Date</dt>
                        <dd class="col-sm-9">@Model.ReleaseDate?.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-3">Age Limit</dt>
                        <dd class="col-sm-9">@Model.AgeLimit+</dd>

                        <dt class="col-sm-3">Base Price</dt>
                        <dd class="col-sm-9">@Model.BasePrice.ToString("N0") VND</dd>

                        <dt class="col-sm-3">Language</dt>
                        <dd class="col-sm-9">@Model.Language</dd>

                        <dt class="col-sm-3">Subtitles</dt>
                        <dd class="col-sm-9">@Model.Subtitles</dd>

                        <dt class="col-sm-3">Description</dt>
                        <dd class="col-sm-9">@Model.Description</dd>
                    </dl>
                </div>
            </div>

            <form asp-action="DeleteMovie" method="post">
                <input type="hidden" asp-for="MovieId" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Movies" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>
</div> 