@model QUANLYRAPCHIEUPHHIM.Models.Movie

<h2>Delete Movie</h2>

<h3>Are you sure you want to delete this movie?</h3>
<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Release Date</dt>
        <dd class="col-sm-10">@Model.ReleaseDate</dd>
    </dl>
    <form asp-action="DeleteMovieConfirmed" asp-route-id="@Model.MovieId" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Movies" class="btn btn-secondary">Back to List</a>
    </form>
</div> 