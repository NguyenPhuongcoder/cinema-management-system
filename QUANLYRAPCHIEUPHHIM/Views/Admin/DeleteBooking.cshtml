@model QUANLYRAPCHIEUPHHIM.Models.Booking

<h2>Delete Booking</h2>

<h3>Are you sure you want to delete this booking?</h3>
<div>
    <h4>Booking</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">User</dt>
        <dd class="col-sm-10">@ViewBag.Username</dd>
        <dt class="col-sm-2">Booking Status</dt>
        <dd class="col-sm-10">@ViewBag.BookingStatusName</dd>
    </dl>
    <form asp-action="DeleteBookingConfirmed" asp-route-id="@Model.BookingId" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Bookings" class="btn btn-secondary">Back to List</a>
    </form>
</div> 