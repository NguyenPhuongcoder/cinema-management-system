@model QUANLYRAPCHIEUPHHIM.Models.Room
@{
    ViewData["Title"] = "Create Room";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Create New Room</h1>

    <div class="card shadow mb-4">
        <div class="card-body">
            <form asp-action="CreateRoom" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="RoomName">Room Name</label>
                    <input asp-for="RoomName" class="form-control" />
                    <span asp-validation-for="RoomName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Capacity">Capacity</label>
                    <input asp-for="Capacity" class="form-control" type="number" min="1" />
                    <span asp-validation-for="Capacity" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FormatId">Room Format</label>
                    <select asp-for="FormatId" class="form-control" asp-items="@(new SelectList(ViewBag.RoomFormats, "FormatId", "FormatName"))">
                        <option value="">Select Format</option>
                    </select>
                    <span asp-validation-for="FormatId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CinemaId">Cinema</label>
                    <select asp-for="CinemaId" class="form-control" asp-items="@(new SelectList(ViewBag.Cinema, "CinemaId", "CinemaName"))">
                        <option value="">Select Cinema</option>
                    </select>
                    <span asp-validation-for="CinemaId" class="text-danger"></span>
                </div>

     

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a asp-action="Rooms" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 