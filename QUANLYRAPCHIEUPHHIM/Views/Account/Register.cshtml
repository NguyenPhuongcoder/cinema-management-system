@model QUANLYRAPCHIEUPHHIM.Models.RegisterViewModel
@{
    ViewData["Title"] = "Đăng ký";
    Layout = "_Layout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header bg-primary text-white">
                    <h3 class="text-center font-weight-light my-4">Tạo Tài Khoản Mới</h3>
                </div>
                <div class="card-body">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["ErrorMessage"]
                        </div>
                    }
                    <form asp-action="Register" method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Username" class="form-control" placeholder="Tên đăng nhập" />
                                    <label asp-for="Username">Tên đăng nhập</label>
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                    <small class="form-text text-muted">Chỉ được chứa chữ cái, số và dấu gạch dưới</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                                    <label asp-for="Email">Email</label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="FullName" class="form-control" placeholder="Họ và tên" />
                            <label asp-for="FullName">Họ và tên</label>
                            <span asp-validation-for="FullName" class="text-danger"></span>
                            <small class="form-text text-muted">Chỉ được chứa chữ cái và khoảng trắng</small>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Phone" class="form-control" placeholder="Số điện thoại" />
                            <label asp-for="Phone">Số điện thoại</label>
                            <span asp-validation-for="Phone" class="text-danger"></span>
                            <small class="form-text text-muted">Ví dụ: 0912345678 hoặc 84912345678</small>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Password" class="form-control" placeholder="Mật khẩu" />
                                    <label asp-for="Password">Mật khẩu</label>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                    <small class="form-text text-muted">Phải chứa ít nhất 1 chữ hoa, 1 chữ thường, 1 số và 1 ký tự đặc biệt</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Xác nhận mật khẩu" />
                                    <label asp-for="ConfirmPassword">Xác nhận mật khẩu</label>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mt-4 mb-0">
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="fas fa-user-plus me-2"></i>Tạo Tài Khoản
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3 bg-light">
                    <div class="small">
                        <a asp-action="Login" class="text-primary">
                            <i class="fas fa-sign-in-alt me-1"></i>Đã có tài khoản? Đăng nhập ngay!
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://kit.fontawesome.com/your-code.js" crossorigin="anonymous"></script>
    <script>
        // Enable Bootstrap form validation
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
} 