@model IEnumerable<QUANLYRAPCHIEUPHHIM.Models.Showtime>
@{
    ViewData["Title"] = "Chọn suất chiếu - Đặt vé";
    Layout = "_Layout";
    var movie = ViewBag.Movie as QUANLYRAPCHIEUPHHIM.Models.Movie;
    var groupedShowtimes = Model.GroupBy(s => s.Room.Cinema).ToList();
    var today = DateTime.Today;
    var dates = Enumerable.Range(0, 7).Select(i => today.AddDays(i)).ToList();
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="mb-0">Chọn suất chiếu</h4>
                <a asp-controller="StaffBooking" asp-action="SelectMovie" class="btn btn-sm btn-light">
                    <i class="fas fa-arrow-left"></i> Quay lại
                </a>
            </div>
        </div>
        <div class="card-body">
            @if (movie != null)
            {
                <div class="alert alert-info">
                    <h5>@movie.Title</h5>
                    <p class="mb-0">Thời lượng: @movie.Duration phút</p>
                </div>
            }

            <!-- Chọn ngày -->
            <div class="row mb-3">
                <div class="col-12">
                    <h5>Chọn ngày:</h5>
                    <div class="btn-group date-selector">
                        @foreach (var date in dates)
                        {
                            string btnText = date == today ? "Hôm nay" : 
                                             date == today.AddDays(1) ? "Ngày mai" : 
                                             date.ToString("dd/MM/yyyy");
                            string active = date == today ? "active" : "";
                            <button type="button" class="btn btn-outline-primary @active" data-date="@date.ToString("yyyy-MM-dd")">
                                @btnText
                            </button>
                        }
                    </div>
                </div>
            </div>

            <!-- Chọn rạp -->
            <div class="row mb-3">
                <div class="col-12">
                    <h5>Chọn rạp:</h5>
                    <select class="form-control" id="cinema-filter">
                        <option value="all">Tất cả các rạp</option>
                        @foreach (var group in groupedShowtimes)
                        {
                            <option value="@group.Key.CinemaId">@group.Key.CinemaName</option>
                        }
                    </select>
                </div>
            </div>

            <!-- Danh sách suất chiếu -->
            <div class="row mb-3">
                <div class="col-12">
                    <h5>Chọn suất chiếu:</h5>
                    @if (groupedShowtimes.Any())
                    {
                        foreach (var group in groupedShowtimes)
                        {
                            <div class="card mb-3 cinema-card" data-cinema-id="@group.Key.CinemaId">
                                <div class="card-header bg-light">
                                    <strong>@group.Key.CinemaName</strong>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        @foreach (var showtime in group.OrderBy(s => s.StartTime))
                                        {
                                            <div class="col-md-3 mb-2 showtime-item" data-date="@showtime.StartTime.ToString("yyyy-MM-dd")">
                                                <a asp-controller="StaffBooking" asp-action="SelectSeats" asp-route-showtimeId="@showtime.ShowtimeId" 
                                                   class="btn btn-outline-primary showtime-btn">
                                                    @showtime.StartTime.ToString("HH:mm") - @showtime.Room.RoomName
                                                    @if (showtime.Room.Format != null)
                                                    {
                                                        <span> - @showtime.Room.Format.FormatName</span>
                                                    }
                                                </a>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            Không có suất chiếu nào cho phim này.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .date-selector .btn {
            margin-right: 5px;
        }
        
        .showtime-btn {
            width: 100%;
            margin-bottom: 10px;
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Lọc theo ngày
            $('.date-selector button').click(function() {
                $('.date-selector button').removeClass('active');
                $(this).addClass('active');
                var selectedDate = $(this).data('date');
                $('.showtime-item').hide();
                $('.showtime-item[data-date="' + selectedDate + '"]').show();
            });

            // Lọc theo rạp
            $('#cinema-filter').change(function() {
                var selectedCinema = $(this).val();
                if (selectedCinema === 'all') {
                    $('.cinema-card').show();
                } else {
                    $('.cinema-card').hide();
                    $('.cinema-card[data-cinema-id="' + selectedCinema + '"]').show();
                }
            });
        });
    </script>
} 