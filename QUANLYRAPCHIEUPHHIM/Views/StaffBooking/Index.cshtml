@{
    ViewData["Title"] = "Hệ thống đặt vé - Nhân viên";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Hệ thống đặt vé dành cho nhân viên</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <div class="card h-100">
                                <div class="card-body text-center">
                                    <i class="fas fa-film fa-3x mb-3 text-primary"></i>
                                    <h5 class="card-title">Đặt vé</h5>
                                    <p class="card-text">Tạo đơn đặt vé mới cho khách hàng</p>
                                    <a asp-controller="StaffBooking" asp-action="SelectMovie" class="btn btn-primary">Bắt đầu</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="card h-100">
                                <div class="card-body text-center">
                                    <i class="fas fa-search fa-3x mb-3 text-primary"></i>
                                    <h5 class="card-title">Tra cứu vé</h5>
                                    <p class="card-text">Kiểm tra thông tin vé đã đặt</p>
                                    <a href="#" class="btn btn-primary">Tra cứu</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="card h-100">
                                <div class="card-body text-center">
                                    <i class="fas fa-chart-bar fa-3x mb-3 text-primary"></i>
                                    <h5 class="card-title">Báo cáo</h5>
                                    <p class="card-text">Xem thống kê và báo cáo bán vé</p>
                                    <a href="#" class="btn btn-primary">Xem báo cáo</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // JavaScript cho trang nhân viên đặt vé
        });
    </script>
} 