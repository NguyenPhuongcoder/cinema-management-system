@model List<QUANLYRAPCHIEUPHHIM.Models.Movie>

<h2>Danh sách phim</h2>
<div class="row">
	@foreach (var movie in Model)
	{
		<div class="col-md-3">
			<div class="card mb-4">
				<img src="@movie.PosterUrl" class="card-img-top" alt="@movie.Title" />
				<div class="card-body">
					<h5 class="card-title">@movie.Title</h5>
					<p class="card-text">Thời lượng: @movie.Duration phút</p>
					<a href="/Movie/Details/@movie.MovieId" class="btn btn-primary">Xem chi tiết</a>
				</div>
			</div>
		</div>
	}
</div>