@using QUANLYRAPCHIEUPHHIM.Models.ViewModels
@model TicketConfirmationViewModel

<div class="row justify-content-center">
    <div class="col-md-8">
        <!-- Thông tin đặt vé -->
        <div class="card mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0">Thông tin đặt vé</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Tên khách hàng:</strong> @Model.CustomerName</p>
                        <p><strong>Số điện thoại:</strong> @Model.CustomerPhone</p>
                        <p><strong>Email:</strong> @Model.CustomerEmail</p>
                        <p><strong>Ngày đặt:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Mã đặt vé:</strong> @Model.TicketCode</p>
                        <p><strong>Trạng thái:</strong> 
                            <partial name="_TicketStatusBadge" model="Model.Status" />
                        </p>
                        <p><strong>Phương thức thanh toán:</strong> 
                            @switch (Model.PaymentMethod?.ToLower())
                            {
                                case "cash":
                                    <span>Tiền mặt</span>
                                    break;
                                case "card":
                                    <span>Thẻ tín dụng/ghi nợ</span>
                                    break;
                                case "transfer":
                                    <span>Chuyển khoản</span>
                                    break;
                                default:
                                    <span>Không xác định</span>
                                    break;
                            }
                        </p>
                        <p><strong>Tổng tiền:</strong> @Model.TotalAmount.ToString("N0") VND</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Thông tin vé -->
        <div class="card mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0">Thông tin vé</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Phim:</strong> @Model.MovieTitle</p>
                        <p><strong>Định dạng:</strong> @Model.FormatName</p>
                        <p><strong>Rạp:</strong> @Model.CinemaName</p>
                        <p><strong>Phòng chiếu:</strong> @Model.RoomName</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Ngày chiếu:</strong> @Model.Showtime.ToString("dd/MM/yyyy")</p>
                        <p><strong>Giờ chiếu:</strong> @Model.Showtime.ToString("HH:mm")</p>
                        <p><strong>Ghế:</strong> @string.Join(", ", Model.Seats.Select(s => s.SeatCode))</p>
                        <p><strong>Loại ghế:</strong> @string.Join(", ", Model.Seats.Select(s => s.SeatType).Distinct())</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tóm tắt thanh toán -->
        <div class="card mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0">Tóm tắt thanh toán</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        @foreach (var seatGroup in Model.Seats.GroupBy(s => s.SeatType))
                        {
                            <div class="d-flex justify-content-between mb-2">
                                <span>@seatGroup.Count() vé @seatGroup.Key (@seatGroup.First().Price.ToString("N0") VND/vé):</span>
                                <span>@seatGroup.Sum(s => s.Price).ToString("N0") VND</span>
                            </div>
                        }
                        <div class="d-flex justify-content-between mb-2">
                            <span>Phí dịch vụ:</span>
                            <span>15.000 VND</span>
                        </div>
                        @if (Model.DiscountValue.HasValue && Model.DiscountValue.Value > 0)
                        {
                            <div class="d-flex justify-content-between mb-2">
                                <span>Giảm giá:</span>
                                <span>@Model.DiscountValue.Value%</span>
                            </div>
                        }
                        <hr>
                        <div class="d-flex justify-content-between">
                            <strong>Tổng cộng:</strong>
                            <strong>@Model.TotalAmount.ToString("N0") VND</strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-center">
            <a href="@Url.Action("PrintTicket", "StaffBooking", new { ticketId = Model.TicketId })" class="btn btn-outline-primary me-2">
                <i class="fas fa-print me-1"></i> In vé
            </a>
            <a href="@Url.Action("SendTicketEmail", "StaffBooking", new { ticketId = Model.TicketId })" class="btn btn-outline-success me-2">
                <i class="fas fa-envelope me-1"></i> Gửi email
            </a>
            <a asp-controller="StaffBooking" asp-action="Index" class="btn btn-primary">
                <i class="fas fa-home me-1"></i> Quay về trang chủ
            </a>
        </div>
    </div>
</div> 