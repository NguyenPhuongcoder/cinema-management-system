@{
    ViewData["Title"] = "Đặt vé thành công";
    Layout = "_Layout";
}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="bg-white rounded shadow-sm p-5 text-center">
                <div class="mb-4">
                    <i class="fa fa-check-circle text-success" style="font-size:3rem;"></i>
                </div>
                <h2 class="fw-bold mb-3">@ViewBag.Message</h2>
                <p class="mb-4">Cảm ơn bạn đã đặt vé tại hệ thống!<br />Vui lòng kiểm tra email hoặc vào mục "Lịch sử đặt vé" để xem chi tiết vé của bạn.</p>
                <a href="/" class="btn btn-primary px-4 py-2 fw-bold">Về trang chủ</a>
            </div>
        </div>
    </div>
</div> 